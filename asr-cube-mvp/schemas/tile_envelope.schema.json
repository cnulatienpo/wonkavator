{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TileEnvelope",
  "type": "object",
  "required": [
    "id",
    "board_id",
    "type",
    "label",
    "facet",
    "status",
    "position",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "board_id": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "concept",
        "subject",
        "medium",
        "material",
        "style",
        "mood",
        "emotion",
        "audience",
        "time_budget",
        "reference",
        "image",
        "audio",
        "video",
        "model3d",
        "document",
        "link",
        "result"
      ]
    },
    "label": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "facet": {
      "type": "object"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "in_progress",
        "locked",
        "explored",
        "discarded",
        "transcended"
      ]
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "integer"
        },
        "y": {
          "type": "integer"
        }
      },
      "required": [
        "x",
        "y"
      ]
    },
    "modifiers_applied": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "chat_thread_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "metrics": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "created_at": {
      "type": "string"
    },
    "updated_at": {
      "type": "string"
    }
  }
}